class Asish {
    public static void main(String args[]){
       int sum = 0;
       int n = 4;
       for(int i =1;i<=n;i++){
           sum = sum+i;
       }
       System.out.println(sum);
    }
}



/// using Scanner class

import java.util.*;
class Asish {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
       int sum = 0;
       
       for(int i =1;i<=n;i++){
           sum = sum+i;
       }
       System.out.println(sum);
}
}
